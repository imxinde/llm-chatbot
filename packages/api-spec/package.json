{
  "name": "@app/api-spec",
  "version": "1.0.0",
  "private": true,
  "description": "OpenAPI specification for LLM Chatbot API",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./openapi.yaml": "./openapi.yaml"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "openapi-typescript openapi.yaml -o generated/api-types.ts",
    "clean": "rm -rf dist generated"
  },
  "dependencies": {
    "@app/shared": "workspace:*"
  },
  "devDependencies": {
    "openapi-typescript": "^7.0.0",
    "typescript": "^5.3.0"
  }
}
